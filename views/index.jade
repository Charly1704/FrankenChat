doctype html
html(ng-app="FrankenChat")
    head
        title Micro Chat NEA
        meta(charset="uft-8")
        link(rel='stylesheet', href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css')
        script(src="https://ajax.googleapis.com/ajax/libs/angularjs/1.5.5/angular.min.js")
        script(src="/FrankenChat.js")
    body(ng-controller="chatCtrl")
        div(ng-repeat="mens in mensajes") {{mens}}
        h1 Chat
        form(action="/", method="POST")
            div
                input(type="text" name="mensaje")
                input(type="submit" value="Enviar")
        form
            div

                input(type="submit" value="Refrescar" ng-click="obtnerMensaje()")
